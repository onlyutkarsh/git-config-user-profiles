{
  "name": "git-config-user-profiles",
  "displayName": "Git Config User Profiles",
  "description": "Define multiple git config user profiles and switch them easily using status bar",
  "version": "2.3.1",
  "publisher": "onlyutkarsh",
  "author": "Utkarsh Shigihalli",
  "repository": {
    "type": "git",
    "url": "https://github.com/onlyutkarsh/git-config-user-profiles.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "config",
    "multi-root ready"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.83.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --tsconfig=src/tsconfig.json --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./src",
    "dev": "npm run compile && npm run esbuild-watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package --allow-star-activation",
    "deploy": "vsce publish --allow-star-activation",
    "publish:ovsx": "ovsx publish",
    "clean": "git clean -fdX",
    "pushchanges": "git push && git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/gitconfiglocal": "^2.0.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "~20.11.17",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vscode/vsce": "^2.23.0",
    "conventional-changelog-cli": "^4.1.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-standard-reporter": "^2.0.0",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "ovsx": "^0.8.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-get": "^4.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "simple-git": "~3.22.0",
    "uuid": "^9.0.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "git-config-user-profiles.pickUserProfile",
        "title": "Git Config User Profiles: Pick Profile"
      },
      {
        "command": "git-config-user-profiles.createUserProfile",
        "title": "Git Config User Profiles: Create Profile"
      },
      {
        "command": "git-config-user-profiles.editUserProfile",
        "title": "Git Config User Profiles: Edit Profile"
      },
      {
        "command": "git-config-user-profiles.deleteUserProfile",
        "title": "Git Config User Profiles: Delete Profile"
      },
      {
        "command": "git-config-user-profiles.showStatus",
        "title": "Git Config User Profiles: Show Status"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Git Config User Profiles",
      "properties": {
        "gitConfigUser.profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "inner objects",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of profile. E.g: Work, Home"
              },
              "username": {
                "type": "string",
                "description": "user name"
              },
              "email": {
                "type": "string",
                "description": "User email"
              },
              "signingkey": {
                "type": "string",
                "description": "User signing key"
              }
            }
          },
          "default": [],
          "description": "Git Config User Profiles configuration"
        },
        "gitConfigUser.selectMatchedProfileAutomatically": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Select the matched profile automatically when opening a workspace"
        },
        "gitConfigUser.workspaceProfileSelections": {
          "type": "object",
          "default": {},
          "scope": "application",
          "markdownDescription": "Stores the selected profile ID for each workspace folder. This is stored in user settings (not workspace settings) so selections remain private to each developer and are not shared with the team."
        }
      }
    }
  }
}
